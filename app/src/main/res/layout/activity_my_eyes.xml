<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_eyes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zhonghuajia.myEyes">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的小眼睛"
        android:textSize="24dp"
        android:gravity="center" />

    <Button
        android:id="@+id/button_to_eyes"
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="小眼睛"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/my_button_shape" />

    <Button
        android:id="@+id/button_to_encyclopedia"
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="百事通"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_to_eyes"
        android:layout_toEndOf="@+id/button_to_eyes"
        android:background="@drawable/my_button_shape" />

    <Button
        android:id="@+id/button_to_friends"
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="小伙伴"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/button_to_encyclopedia"
        android:layout_toEndOf="@id/button_to_encyclopedia"
        android:background="@drawable/my_button_shape" />

    <Button
        android:id="@+id/button_to_heaven"
        android:layout_width="175px"
        android:layout_height="wrap_content"
        android:text="小天堂"
        android:textSize="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/button_to_friends"
        android:layout_toEndOf="@id/button_to_friends"
        android:background="@drawable/my_button_shape" />

</RelativeLayout>

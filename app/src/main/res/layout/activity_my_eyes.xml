<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_eyes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.zhonghuajia.myEyes">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的小眼睛"
        android:textSize="24dp"
        android:gravity="center" />

    <RadioGroup
        android:id="@+id/home_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/button_to_eyes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/eyes_background"
            android:layout_gravity="center"
            android:paddingBottom="5dp" />

        <RadioButton
            android:id="@+id/button_to_encyclopedia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/encyclopedia_background"
            android:layout_gravity="center"
            android:paddingBottom="5dp" />

        <RadioButton
            android:id="@+id/button_to_friends"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/friends_background"
            android:layout_gravity="center"
            android:paddingBottom="5dp" />

        <RadioButton
            android:id="@+id/button_to_heaven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/heaven_background"
            android:layout_gravity="center"
            android:paddingBottom="5dp" />
    </RadioGroup>

</RelativeLayout>
